{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": ".",
        "rootDir": "./",
        "outDir": "./dist"
    },
    "include": ["**/*.ts", "**/*.tsx", "rollup.config.ts"],
    "exclude": ["coverage", "dist", "node_modules", "storybook"]
}
